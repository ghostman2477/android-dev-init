<?xml version="1.0" encoding="utf-8"?>
<!--
  This shape drawable defines the style for the EditText background.
  It creates a rectangle with rounded corners and a subtle grey border.
-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <solid android:color="#F5F5F5" /> <!-- A light grey fill color -->
    <corners android:radius="12dp" />
    <stroke
        android:width="1dp"
        android:color="#E0E0E0" /> <!-- A subtle border color -->
</shape>
