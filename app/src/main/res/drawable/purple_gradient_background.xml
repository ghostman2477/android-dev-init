<?xml version="1.0" encoding="utf-8"?>
<!--
  This drawable defines the gradient for your background.
  It transitions from a deep purple to a lighter, vibrant purple.
  The angle is set to 90 degrees, creating a top-to-bottom effect.
  You can experiment with the angle and colors to get the exact feel you want!
-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <gradient
        android:angle="90"
        android:endColor="#8E2DE2"
        android:startColor="#4A00E0"
        android:type="linear" />
</shape>
