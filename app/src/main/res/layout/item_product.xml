<?xml version="1.0" encoding="utf-8"?>
<!--
  UI/UX UPGRADE: Switched to MaterialCardView for better styling capabilities.
  Increased the corner radius for a softer, more modern look.
  The layout width is now set to a slightly larger, more standard size for grid items.
-->
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp">

    <!--
      UI/UX UPGRADE: Using ConstraintLayout allows for complex, responsive arrangements,
      like overlaying elements on the image, which is key to the Zomato/Swiggy look.
    -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--
          Product Image (ID preserved)
          The image is the hero. The rounded top corners match the card's radius.
        -->
        <ImageView
            android:id="@+id/productImageView"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:contentDescription="Product Image"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder_product_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--
          UI/UX UPGRADE: Discount Tag
          This is a classic element from food delivery apps. It's a TextView with a
          bold style and a gradient background, overlaid on the image to immediately
          draw attention to offers.
        -->
        <TextView
            android:id="@+id/discountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/purple_gradient_background"
            android:paddingStart="8dp"
            android:paddingTop="4dp"
            android:paddingEnd="8dp"
            android:paddingBottom="4dp"
            android:text="20% OFF"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/productImageView"
            app:layout_constraintStart_toStartOf="@id/productImageView"
            tools:ignore="SmallSp" />

        <!-- Product Name (ID preserved) -->
        <TextView
            android:id="@+id/productNameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Product Name"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/productImageView" />

        <!--
          UI/UX UPGRADE: Star Rating
          Another key element for building user trust and providing quick info.
        -->
        <TextView
            android:id="@+id/ratingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:text="4.5"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            app:drawableStartCompat="@drawable/ic_star"
            app:drawableTint="?attr/colorPrimary"
            app:layout_constraintStart_toStartOf="@id/productNameTextView"
            app:layout_constraintTop_toBottomOf="@id/productNameTextView" />


        <!-- Product Price (ID preserved) -->
        <TextView
            android:id="@+id/productPriceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            android:text="$99.99"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/productNameTextView"
            app:layout_constraintTop_toBottomOf="@id/ratingTextView" />

        <!--
          UI/UX UPGRADE: "ADD" Button
          The most important Call to Action. It's styled to be prominent, with a
          subtle stroke and a plus icon. This invites interaction.
        -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/addButton"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:text="ADD"
            android:textColor="?attr/colorPrimary"
            app:cornerRadius="8dp"
            app:icon="@drawable/ic_add"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconTint="?attr/colorPrimary"
            app:layout_constraintBottom_toBottomOf="@id/productPriceTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/productPriceTextView"
            app:strokeColor="?attr/colorPrimary" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
